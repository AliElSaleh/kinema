if mode ModePath %(Mode) else ModePath Release

include ../../physx_$(modepath).buildvariables

if _platform == windows Compiler cl else Compiler clang

Assembly PhysXTask_static_64
Extension lib

SourceDirectory src
IntermediateDirectory ../../int/%_FileName
BuildDirectory ../../Build/$(ModePath)

CompilerFlags $PxCompilerFlags /Gd /GR- /GS- /fp:fast /wd4514 /wd4820 /wd4127 /wd4710 /wd4711 /wd4577 /wd4996
LinkerFlags $PxLinkerFlags /subsystem:console

Includes [
    ../../../pxshared/include
    ../../include
    ../foundation/include
    ../cudamanager/include
]

Defines $PxSharedDefines

if _platform == windows Defines $PxWindowsDefines _LIB