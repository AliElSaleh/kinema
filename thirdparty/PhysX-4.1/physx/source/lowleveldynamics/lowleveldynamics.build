if mode ModePath %(Mode) else ModePath Release

include ../../physx_$(modepath).buildvariables

if _platform == windows Compiler cl else Compiler clang

Assembly LowLevelDynamics_static_64
Extension lib

SourceDirectory src
IntermediateDirectory ../../int/%_FileName
BuildDirectory ../../Build/$(ModePath)

CompilerFlags $PxCompilerFlags
LinkerFlags $PxLinkerFlags /subsystem:console

Includes [
    src
    include
    common/include
    ../lowlevel/api/include
    ../lowlevel/common/include
    ../lowlevel/common/include/pipeline
    ../lowlevel/common/include/utils
    ../lowlevel/software/include
    ../../../pxshared/include
    ../../include
    ../common/src
    ../foundation/include
    ../geomutils/include
    ../geomutils/src
    ../geomutils/src/contact
    ../physx/include
]

Defines $PxSharedDefines

if _platform == windows Defines $PxWindowsDefines _LIB